####### DNS & Public IP Variables
variable "app_gateway_frontend_ip_name" {
  description = "The name of the frontend IP configuration for the application gateway."
  type        = string
}

variable "app_gateway_frontend_ip_rg" {
  description = "The resource group of the application gateway frontend IP."
  type        = string
}

variable "dns_a_record_name" {
  description = "The name of the DNS A record."
  type        = string
}

variable "dns_a_record_ttl" {
  description = "The TTL (Time To Live) of the DNS A record in seconds."
  type        = number
  default     = 300
}

variable "dns_zone" {
  description = "The DNS zone in which to create the A record."
  type        = string
}

variable "dns_zone_rg" {
  description = "The resource group of the DNS zone."
  type        = string
}

