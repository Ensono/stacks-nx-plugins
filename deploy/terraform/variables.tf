###### Redis Variables
variable "create_redis" {
  description = "Flag to create a Redis instance."
  type        = bool
  default     = null
}

variable "custom_name" {
  description = "Provide a custom UNIQUE name for your cache instance. This overrides the name that is generated by the Claranet Redis module."
  type        = string
  default     = null
}

variable "attributes" {
  description = "Additional attributes for the resources."
  type        = list(string)
  default     = []
}

# Required By Module IF You wish to create Redis Cache Instance ONLY!
variable "redis_resource_group_name" {
  description = "The name of the resource group to deploy Redis to."
  type        = string
  default     = null
}

variable "location" {
  description = "The region that your resources will deploy to."
  type        = string
}

variable "logs_destinations_ids" {
  description = "The list of destination IDs for logging."
  type        = list(string)
  default     = []
}

variable "sku_name" {
  description = "The SKU name for the Redis instance."
  type        = string
  default     = "Basic"
}

variable "capacity" {
  description = "Redis size: (Basic/Standard: 1,2,3,4,5,6) (Premium: 1,2,3,4)"
  type        = number
  default     = 1
}

variable "public_network_access_enabled" {
  description = "Flag to enable public network access"
  type        = bool
  default     = true
}

variable "allow_non_ssl_connections" {
  description = "Flag to allow non-SSL connections"
  type        = bool
  default     = true
}

