{
    "cli": {
        "packageManager": "pnpm"
    },
    "pluginsConfig": {
        "@nx/js": {
            "analyzeSourceFiles": true
        }
    },
    "extends": "nx/presets/npm.json",
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultProject": "workspace",
    "workspaceLayout": {
        "appsDir": "e2e",
        "libsDir": "packages"
    },
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/.eslintrc.json",
            "!{projectRoot}/src/test-setup.[jt]s",
            "!{projectRoot}/eslint.config.mjs"
        ],
        "sharedGlobals": [
            "{workspaceRoot}/babel.config.json",
            "{workspaceRoot}/.github/workflows/e2e.yml"
        ]
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "cache": true
        },
        "e2e": {
            "inputs": [
                "default",
                "^production",
                {
                    "env": "NX_E2E_CI_CACHE_KEY"
                }
            ],
            "cache": true
        },
        "version": {
            "dependsOn": ["^build", "^version"],
            "cache": false
        },
        "publish": {
            "cache": false
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "@nx/eslint:lint": {
            "inputs": [
                "default",
                "{workspaceRoot}/.eslintrc.json",
                "{workspaceRoot}/eslint.config.mjs"
            ],
            "cache": true
        },
        "nx-release-publish": {
            "options": {
                "packageRoot": "{projectRoot}"
            }
        }
    },
    "plugins": [
        {
            "plugin": "@nx/js/typescript",
            "options": {
                "typecheck": {
                    "targetName": "typecheck"
                },
                "build": false
            }
        },
        {
            "plugin": "@nx/vite/plugin",
            "exclude": ["e2e/**/*"],
            "options": {
                "buildTargetName": "build",
                "testTargetName": "test",
                "serveTargetName": "serve",
                "devTargetName": "dev",
                "previewTargetName": "preview",
                "serveStaticTargetName": "serve-static",
                "typecheckTargetName": "typecheck",
                "buildDepsTargetName": "build-deps",
                "watchDepsTargetName": "watch-deps"
            }
        },
        {
            "plugin": "@nx/vitest",
            "exclude": ["e2e/**/*"],
            "options": {
                "testTargetName": "test",
                "ciTargetName": "test-ci",
                "testMode": "watch"
            }
        },
        {
            "plugin": "@nx/next/plugin",
            "options": {
                "startTargetName": "start",
                "buildTargetName": "build",
                "devTargetName": "dev",
                "serveStaticTargetName": "serve-static",
                "buildDepsTargetName": "build-deps",
                "watchDepsTargetName": "watch-deps"
            }
        },
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/vitest",
            "include": ["e2e/**/*"],
            "options": {
                "testTargetName": "e2e",
                "ciTargetName": "e2e-ci"
            }
        }
    ],
    "nxCloudEncryptionKey": "stacks-nx-plugins",
    "release": {
        "projects": ["packages/*/**", "!*-e2e"],
        "projectsRelationship": "fixed",
        "changelog": {
            "workspaceChangelog": {
                "createRelease": "github",
                "file": false
            }
        },
        "conventionalCommits": {
            "types": {
                "deps": {
                    "semverBump": "patch",
                    "changelog": {
                        "title": "ðŸšš Dependencies",
                        "hidden": false
                    }
                }
            }
        },
        "git": {
            "commitMessage": "chore(release): publish {version} [no ci]"
        },
        "releaseTagPatternCheckAllBranchesWhen": false,
        "releaseTagPatternRequireSemver": true,
        "releaseTagPatternStrictPreid": true,
        "version": {
            "manifestRootsToUpdate": ["./", "{projectRoot}"],
            "preVersionCommand": "pnpm exec nx run-many -t build",
            "conventionalCommits": true,
            "fallbackCurrentVersionResolver": "disk"
        }
    },
    "nxCloudId": "691b18b0418b664b92a11777"
}
