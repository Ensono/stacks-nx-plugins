{
    "$schema": "http://json-schema.org/schema",
    "$id": "ReactQuery",
    "title": "Ensono Stacks React Query Generator",
    "description": "The @ensono-stacks/next:react-query generator adds React Query to the Next App",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "alias": "p",
            "$default": {
                "$source": "projectName"
            },
            "x-prompt": "What is the name of the project?",
            "x-priority": "important"
        },
        "skipPackageJson": {
            "type": "boolean",
            "default": false,
            "description": "Do not add dependencies to `package.json`."
        }
    },
    "required": [
        "project"
    ]
}
