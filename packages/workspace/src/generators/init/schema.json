{
    "$schema": "http://json-schema.org/schema",
    "cli": "nx",
    "$id": "Install",
    "title": "Configure a Nx Workspace for Ensono Stacks",
    "type": "object",
    "properties": {
        "husky": {
            "type": "boolean",
            "description": "Install & configure husky",
            "default": true
        },
        "commitizen": {
            "type": "boolean",
            "description": "Install & configure commitizen",
            "default": true
        },
        "eslint": {
            "type": "boolean",
            "description": "Install & configure eslint",
            "default": true
        },
        "pipelineRunner": {
            "type": "string",
            "description": "Add pipeline runner config",
            "default": "none",
            "x-prompt": {
                "message": "Which pipeline runner would you like to generate?",
                "type": "list",
                "items": [
                    {
                        "value": "taskctl",
                        "label": "TaskCtl"
                    },
                    {
                        "value": "none",
                        "label": "None"
                    }
                ]
            }
        }
    },
    "required": []
}
