{
    "name": "playwright",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/playwright/src",
    "projectType": "library",
    "tags": ["plugin"],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/playwright",
                "main": "packages/playwright/src/index.ts",
                "tsConfig": "packages/playwright/tsconfig.lib.json",
                "assets": [
                    "packages/playwright/*.md",
                    {
                        "input": "./packages/playwright/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/playwright/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/playwright",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./packages/playwright",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/rest-client/**/*.ts",
                    "packages/rest-client/generators.json",
                    "packages/rest-client/executors.json",
                    "packages/rest-client/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/playwright/jest.config.ts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "trackDeps": true,
                "dryRun": true,
                "skipRootChangelog": true,
                "skipProjectChangelog": true,
                "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]"
            },
            "configurations": {
                "prerelease": {
                    "dryRun": false,
                    "noVerify": true,
                    "releaseAs": "prerelease",
                    "preid": "alpha",
                    "push": true,
                    "postTargets": ["playwright:publish:prerelease"]
                },
                "release": {
                    "dryRun": false,
                    "noVerify": true,
                    "push": true,
                    "postTargets": ["playwright:publish", "playwright:github"]
                }
            }
        },
        "publish": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public"
            },
            "configurations": {
                "prerelease": {
                    "tag": "dev"
                }
            }
        },
        "github": {
            "executor": "@jscutlery/semver:github",
            "options": {
                "tag": "${tag}",
                "notes": "${notes}"
            }
        }
    }
}
