{
    "name": "playwright",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/playwright/src",
    "projectType": "library",
    "tags": ["plugin"],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "packages/playwright/dist",
                "main": "packages/playwright/src/index.ts",
                "tsConfig": "packages/playwright/tsconfig.lib.json",
                "rootDir": "packages/playwright/src",
                "generatePackageJson": false,
                "assets": [
                    {
                        "input": "./packages/playwright/src",
                        "glob": "**/!(*.ts)",
                        "output": "."
                    },
                    {
                        "input": "./packages/playwright/src",
                        "glob": "**/*.d.ts",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/playwright/**/*.ts",
                    "packages/playwright/generators.json",
                    "packages/playwright/executors.json",
                    "packages/playwright/package.json"
                ]
            },
            "configurations": {
                "release": {
                    "fix": true
                }
            }
        }
    }
}
