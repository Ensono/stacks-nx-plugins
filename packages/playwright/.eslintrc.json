{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "parserOptions": {
                "project": ["packages/playwright/tsconfig.*?.json"]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": [
                "./package.json",
                "./generators.json",
                "./executors.json"
            ],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nrwl/nx/nx-plugin-checks": "error"
            }
        }
    ]
}
