{
    "name": "azure-node",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/azure-node/src",
    "projectType": "library",
    "tags": ["plugin"],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/azure-node",
                "main": "packages/azure-node/src/index.ts",
                "tsConfig": "packages/azure-node/tsconfig.lib.json",
                "assets": [
                    "packages/azure-node/*.md",
                    {
                        "input": "./packages/azure-node/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/azure-node/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/azure-node",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./packages/azure-node",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/azure-node/**/*.ts",
                    "packages/azure-node/generators.json",
                    "packages/azure-node/executors.json",
                    "packages/azure-node/package.json"
                ]
            },
            "configurations": {
                "release": {
                    "fix": true
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/azure-node/jest.config.ts"
            }
        },
        "dependency": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx run azure-node:lint:release",
                    "git add packages/azure-node/package.json",
                    "git commit --amend --no-edit --no-verify"
                ],
                "parallel": false,
                "forwardAllArgs": false
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "trackDeps": true,
                "dryRun": true,
                "skipRootChangelog": true,
                "skipProjectChangelog": true,
                "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]"
            },
            "configurations": {
                "prerelease": {
                    "dryRun": false,
                    "noVerify": true,
                    "releaseAs": "prerelease",
                    "preid": "alpha",
                    "push": false,
                    "postTargets": ["azure-node:dependency", "azure-node:build"]
                },
                "release": {
                    "dryRun": false,
                    "noVerify": true,
                    "push": false,
                    "postTargets": [
                        "azure-node:dependency",
                        "azure-node:build",
                        "azure-node:publish",
                        "azure-node:github"
                    ]
                },
                "local-release": {
                    "dryRun": false,
                    "noVerify": true,
                    "push": false,
                    "postTargets": [
                        "azure-node:lint:release",
                        "azure-node:build",
                        "create:publish"
                    ],
                    "allowEmptyRelease": true,
                    "skipCommit": true
                }
            }
        },
        "publish": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public"
            },
            "configurations": {
                "prerelease": {
                    "tag": "dev"
                }
            }
        },
        "github": {
            "executor": "@jscutlery/semver:github",
            "options": {
                "tag": "${tag}",
                "notes": "${notes}"
            }
        }
    }
}
